<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="0.0dip" >

        <ViewFlipper
            android:id="@+id/image1"
            android:layout_width="fill_parent"
            android:layout_height="300dip"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:src="@drawable/g1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/your_profile"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@drawable/ripple"
            android:onClick="buttonClickFunction"
            android:paddingLeft="10sp"
            android:text="Getting Started"
            android:textColor="#D32F2F"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/credtits_button"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="30"
            android:background="@drawable/ripple"
            android:onClick="workout_plan"
            android:paddingLeft="10sp"
            android:text="Workout Plan"
            android:textColor="#D32F2F"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="monospace" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/exercise_button"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@drawable/ripple"
            android:onClick="mainMenuButtonOnClick"
            android:paddingLeft="10sp"
            android:text="Exercise Step"
            android:textColor="#D32F2F"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <Button
            android:id="@+id/body_profile_button"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:background="@drawable/ripple"
            android:onClick="mainMenuButtonOnClick"
            android:paddingLeft="10sp"
            android:text="Body Profile"
            android:textColor="#D32F2F"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="monospace" />
    </LinearLayout>

</LinearLayout>